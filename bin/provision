#!/bin/bash

scripts=(
  'config-home'
  'config-sudo'
  'config-apt'
  'install-base'
  'install-home'
  'install-dev'
  'install-kvm'
  'install-podman'
)

rootdir="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
for script in "${scripts[@]}"; do
  if ! "${rootdir}/bin/${script}"; then
    printf "%s failed\n" "$script"
    exit 1
  fi
done
